{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "TS node debug",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
        }
    ]
}